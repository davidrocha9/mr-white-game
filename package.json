{
  "name": "mr-white-game",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:client": "cd client && bun run dev -- --host 0.0.0.0",
    "dev:server": "cd server && bun run dev",
    "build": "cd client && bun run build",
    "start": "cd server && bun run start",
    "start:sh": "sh ./start.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
